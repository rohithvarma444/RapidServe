pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS = credentials('dockerhub-creds')
    }

    stages {
        stage('Docker Login'){
            steps{
                sh 'echo $DOCKER_CREDENTIALS_PSW | docker login -u $DOCKER_CREDENTIALS_USR --password-stdin'
            }
            error{
                sh 'echo "Login to Docker Hub failed"'
            }
        }

        stage('Build and Push Docker Images'){
            steps{
                sh 'cd frontend && docker build -t rohithvarma444/frontend:latest . && docker push rohithvarma444/frontend:latest'
                sh 'cd Upload && docker build -t rohithvarma444/upload:latest . && docker push rohithvarma444/upload:latest'
                sh 'cd Deploy && docker build -t rohithvarma444/deploy:latest . && docker push rohithvarma444/deploy:latest'
                sh 'cd Request-Handler && docker build -t rohithvarma444/request-handler:latest . && docker push rohithvarma444/request-handler:latest'
            }
            post{
                success{
                    sh 'echo "Docker images built and pushed successfully"'
                }
                failure{
                    sh 'echo "Docker images build and push failed"'
                }
            }
        }
    }
}