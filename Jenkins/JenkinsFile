pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS = credentials('dockerhub-creds')
    }

    stages {
        stage('Docker Login'){
            steps{
                sh 'docker login -u $DOCKER_CREDENTIALS_USR -p $DOCKER_CREDENTIALS_PSD'
            }
            post{
                success{
                    sh 'echo "Login to Docker Hub successful"'
                }
                failure{
                    sh 'echo "Login to Docker Hub failed"'
                }
            }
        }
    }
}